<% layout('./layouts/boilerplate') %>

    <div class="row" id="book-details">
        <div class="column">
            <span>
                <img src="<%= book.coverImage %>" id="book-cover-details"></img>
            </span>
        </div>
        <div class="column">

            <div>Title:</div>
            <div>
                <%= book.title%>
            </div>
            <div>Author: </div>
            <div>
                <%= book.author %>
            </div>
            <div>Published Date: </div>
            <div>
                <%= book.publishedDate%>
            </div>
            <div>Genre: </div>
            <div>
                <%= book.genre%>
            </div>
            <div>Overview: </div>
            <div>
                <%= book.overview%>
            </div>

            <br><br>
            <h2>Ratings & Reviews</h2>
            <% if (book.reviews.length) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Review</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let total=0 %>
                            <% book.reviews.forEach(function(r) { %>
                                <% total +=r.rating %>
                                    <tr>
                                        <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"
                                                referrerpolicy="no-referrer">
                                            <%= r.userName %>
                                        </td>
                                        <td>
                                            <%= r.createdAt.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= r.content %>
                                        </td>
                                        <td>
                                            <%= r.rating %>
                                        </td>
                                        <td>
                                            <% if (user?._id.equals(r.user)) { %>
                                                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                                    <button type="submit">X</button>
                                                </form>
                                                <a href="/books/<%= book._id %>/reviews/edit">Edit</a>


                                                <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <tr>
                                            <td colspan="3"></td>
                                            <td><strong>
                                                    <%= (total / book.reviews.length).toFixed(1) %>
                                                </strong></td>
                                        </tr>
                    </tbody>
                </table>
                <% } else { %>
                    <h5>No Reviews Yet</h5>
                    <% } %>
                        <form id="add-review-form" method="get" action="/books/<%= book._id %>/reviews/edit">
                            <button class="btn btn-primary">Write a Review</button>
                        </form>



        </div>


    </div>