<% layout('./layouts/boilerplate') %>

    <div class="container-showpage">
        <div class="left-side">
            <span id="book-details">
                <img src="<%= book.coverImage %>" id="book-cover-details"></img>
            </span>
        </div>
        <div class="right-side">

            <div>Title:</div>
            <div>
                <%= book.title%>
            </div>
            <div>Author: </div>
            <div>
                <%= book.author %>
            </div>
            <div>Published Date: </div>
            <div>
                <%= book.publishedDate%>
            </div>
            <div>Genre: </div>
            <div>
                <%= book.genre%>
            </div>
            <div>Overview: </div>
            <div>
                <%= book.overview%>
            </div>

        </div>
        <br>
        <div class="table-responsive">
            <h2>Ratings & Reviews</h2>
            <% if (book.reviews.length) { %>
                <table class="table align-middle">
                    <thead>
                        <tr class="align-bottom>
                            <th scope=" col">
                            </th>
                            <th scope="col"></th>
                            <th scope="col">User</th>
                            <th scope="col">Date</th>
                            <th scope="col">Review</th>
                            <th scope="col">Rating</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <% let total=0 %>
                            <% book.reviews.forEach(function(r) { %>
                                <% total +=r.rating %>
                                    <tr class="align-bottom">
                                        <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"
                                                referrerpolicy="no-referrer"></td>
                                        <td>
                                            <%= r.userName %>
                                        </td>
                                        <td>
                                            <%= r.createdAt.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= r.content %>
                                        </td>
                                        <td>
                                            <%=r.rating %>
                                        </td>
                                        <td>
                                            <% if (user?._id.equals(r.user)) { %>
                                                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                                                    <button type="submit"><i class="fi fi-br-trash"></i></button>
                                                </form>
                                                <a href="/books/<%= book._id %>/<%= r._id %>/reviews/edit"><i
                                                        class="fi fi-rr-edit"></i></a>
                                                <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>

                                        <tr class="align-bottom">
                                            <td colspan="4"></td>
                                            <td><strong>
                                                    <%= (total / book.reviews.length).toFixed(1) %>
                                                </strong></td>
                                        </tr>

                    </tbody>
                </table>
                <% } else { %>
                    <h5>No Reviews Yet</h5>
                    <% } %>
                        <form id="add-review-form" method="get" action="/books/<%= book._id %>/reviews/new">
                            <button class="btn btn-primary">Write a Review</button>
                        </form>

        </div>
    </div>