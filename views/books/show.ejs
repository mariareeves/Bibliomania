<% layout('./layouts/boilerplate') %>

    <div class="row" id="book-details">
        <div class="column">
            <span>
                <img src="<%= book.coverImage %>" id="book-cover-details"></img>
            </span>
        </div>
        <div class="column">

            <div>Title:</div>
            <div>
                <%= book.title%>
            </div>
            <div>Author: </div>
            <div>
                <%= book.author %>
            </div>
            <div>Published Date: </div>
            <div>
                <%= book.publishedDate%>
            </div>
            <div>Genre: </div>
            <div>
                <%= book.genre%>
            </div>
            <div>Overview: </div>
            <div>
                <%= book.overview%>
            </div>

            <br><br>
            <h2>Ratings & Reviews</h2>
            <form id="add-review-form" method="get" action="/books/<%= book._id %>/reviews/new">
                <button class="btn btn-primary">Write a Review</button>
            </form>

            <br><br>
            <% if (book.reviews.length) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Review</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% book.reviews.forEach(function(r) { %>
                            <tr>
                                <td>
                                    <%= r.createdAt.toLocaleDateString() %>
                                </td>
                                <td>
                                    <%= r.content %>
                                </td>
                                <td>
                                    <%= r.rating %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <h5>No Reviews Yet</h5>
                    <% } %>
        </div>


    </div>